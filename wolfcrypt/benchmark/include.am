wolfcrypt_benchmark_benchmark_LDFLAGS      = -static
endif
wolfcrypt_benchmark_benchmark_DEPENDENCIES = src/libwolfssl@LIBSUFFIX@.la
noinst_HEADERS += wolfcrypt/benchmark/benchmark.h

endif
